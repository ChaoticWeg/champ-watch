extends layouts/main

block scripts


block content
	div(style='margin-top:2em')
	.container(style='text-align:center')
		h2 Free champs:
		.row
			.col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2#champs-container
	
				//- if we have champs, show them
				- if (champs) {
					
				ul.list-inline#champs
					- for (var i in champs) {
						- var key  = champs[i].key;
						- var name = champs[i].name;
						
						li.champ(id='#{key}')
							.champ-div
								img(title="#{name}", src="#{buildImageURL(key)}")
								p= name
					- }
					
					//- if we have no champs, then what the fuck
				- } else {
					.error#err-no-champs
						p
							b Error: 
							| no champs
				- } //- if (champs) { ... } else { ... }
